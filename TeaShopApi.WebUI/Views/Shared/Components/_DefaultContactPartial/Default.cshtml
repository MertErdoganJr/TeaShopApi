@* @model CreateContactDto *@

<div class="contact_section layout_padding">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="mail_main">
                    <h1 class="contact_taital">Bize Ulaşın</h1>

                    <form method="post">
                        <div class="form-group">
                            <input type="text" class="email-bt" placeholder="Adınız"  @* name="@Model.Name" *@>
                        </div>
                        <div class="form-group">
                            <input type="text" class="email-bt" placeholder="E-posta" @* name="@Model.Email" *@>
                        </div>
                        <div class="form-group">
                            <input type="text" class="email-bt" placeholder="Konu" @* name="@Model.Subject" *@>
                        </div>
                        <div class="form-group">
                            <textarea class="massage-bt" placeholder="Mesajınız" rows="5" @* name="@Model.Message" *@></textarea>
                        </div>
                        <button class="btn btn-outline-dark">Gönder</button>
                    </form>

                </div>
            </div>
            <div class="col-md-6">
                <div class="map_main">
                    <div class="map-responsive">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d770815.1869053458!2d28.35278722508894!3d41.00344271660253!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14caa7040068086b%3A0xe1ccfe98bc01b0d0!2zxLBzdGFuYnVs!5e0!3m2!1str!2str!4v1701964300166!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>